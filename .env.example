# MongoDB Connection
MONGO_URI=mongodb+srv://satya:password@cluster.mongodb.net/satya
MONGO_DB=satya

# Service Ports
SCRAPER_PORT=5000
PIPELINE_PORT=3000
BACKEND_PORT=4000

# Service URLs (for inter-service communication)
NEWS_SCRAPER_URL=http://localhost:5000
PIPELINE_URL=http://localhost:3000

# API Keys
GEMINI_API_KEY=your_gemini_api_key
GOOGLE_FACTCHECK_API_KEY=your_google_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Authentication (JWT-based, replaced Clerk)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d

# Google OAuth (optional - for Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Cloudinary (for profile pictures)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Service (for verification emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@satya.app

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Pipeline Configuration
GEMINI_MODEL=gemini-2.0-flash
BIAS_PENALTY_FACTOR=0.5
DEFAULT_PUBLISHER_FACTUALITY=0.726642
FUZZY_MATCH_THRESHOLD=0.7
APP_MOTTO=Trustworthy news and viral message filter

# Scraper Configuration
SCRAPE_TIMEOUT_MS=10000
USER_AGENT=NewsScraperBot/1.0
