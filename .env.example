PORT=5000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/satya_db

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Frontend
FRONTEND_URL=http://localhost:5173

# External APIs
NEWSDATA_API_KEY=your_newsdata_api_key
MEDIASTACK_API_KEY=your_mediastack_api_key
GOOGLE_FACTCHECK_API_KEY=your_google_factcheck_api_key

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL_SEC=604800

# AI Service
AI_SERVICE_HOST=http://localhost:8000
AI_SERVICE_KEY=ai_service_secure_api_key_change_in_production
PYTHON_VENV_PATH=./ai_service/venv

# Translation & Language
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,bn,ta,te,mr,gu,kn,ml,pa,or

# Toxicity Detection (optional)
PERSPECTIVE_API_KEY=your_perspective_api_key_or_blank
PERSPECTIVE_ENABLED=false

# Fact-Check Sources
ALTNEWS_RSS_FEED=https://www.altnews.in/feed/
BOOM_RSS_FEED=https://www.boomlive.in/feed
FACTLY_RSS_FEED=https://factly.in/feed/
FACTCHECK_SCRAPER_ALLOWLIST=altnews.in,boomlive.in,factly.in,thequint.com

# WhatsApp/Social Integration
WHATSAPP_WEBHOOK_SECRET=your_whatsapp_webhook_secret
WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# File Upload
FILE_UPLOAD_MAX_MB=10
TEMP_UPLOAD_DIR=/tmp/satya-uploads

# Monitoring & Observability
SENTRY_DSN=your_sentry_dsn_for_error_tracking
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=info

# Docker & Registry
DOCKER_REGISTRY=ghcr.io/your-org/satya
